<div class="feed-item">
<li class="col-lg-12 my-3">
    <h4><%= micropost.content %></h4>

    <%#= pluralize(micropost.likes.count), "like"%>
    <%#= button_to "Like", uplike_micropost_path(micropost)%>
    <%= pluralize(micropost.likes.count, "Like") %>
    <div class="like">
    <%= link_to raw("<i class='fas fa-heart'></i> like"), uplike_micropost_path(micropost) %>
    
    <% if (micropost.likes.count >= 1) %>
         | <%= link_to raw("<i class='fas fa-heart-broken'></i> dislike"), dislike_micropost_path(micropost)%>
    <% end %>
    </div>

        <div class="container">
            <div class="row">
                <span class="timestamp">
                Posted <%= time_ago_in_words(micropost.created_at)%> ago.
                <% if current_user?(micropost.user) %>
                    <%= link_to raw("<i class='fas fa-trash'></i>"), micropost, method: :delete, data: {confirm: "Are you sure?"}, title: micropost.content %>
                <% end %>
                </span>
            </div>
        </div>
</li>
</div>